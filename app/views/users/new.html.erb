<div class="body_cover">
<div class="usernew">
  <h1>新規登録</h1>
    <%= form_for(@user) do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "ユーザ名" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードの確認" %>
    </div>
    <div class="form-group">
        <%= f.label :private, "非公開アカウント" %>
        <%= f.check_box :private, class: "form-control1" %>
      </div>
    <%= f.submit "登録", class: "btn btn-warning" %>
    <% end %>
</div>
</div>